<?xml version="1.0" encoding="utf-8"?>
    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:id="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/mainColor">

            <ImageView
                    android:id="@+id/btn_gotoMain"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/calendar_selected"
                    android:layout_weight="1"
                    android:layout_gravity="center"
            />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/daeta"
                    android:id="@+id/btn_gotoDaeta"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>
        </LinearLayout>


    <LinearLayout
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f1f3f5"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:layout_marginTop="50dp">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tv_prev_month"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:textColor="@color/mainWhite"
                    android:text="  이전  "
                    android:textSize="15dp"
                    android:gravity="center"
                    android:background="@drawable/round_maincolor"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/tv_current_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:text="2019  03"
                    android:textSize="30dp"
                    android:textStyle="bold"
            />

            <TextView
                    android:id="@+id/tv_next_month"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:textColor="@color/mainWhite"
                    android:text="  다음  "
                    android:textSize="15dp"
                    android:gravity="center"
                    android:background="@drawable/round_maincolor"
                    android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
        >

            <LinearLayout
                    android:id="@+id/Ll_day"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="horizontal"
            >

                <TextView
                        android:id="@+id/tv_sun"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="SUN"
                        android:textColor="@color/mainWhite"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:background="@color/mainColor"
                />

                <TextView
                        android:id="@+id/tv_mon"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="MON"
                        android:textColor="@color/mainWhite"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:background="@color/mainColor"/>

                <TextView
                        android:id="@+id/tv_tue"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="TUE"
                        android:textColor="@color/mainWhite"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:background="@color/mainColor"/>

                <TextView
                        android:id="@+id/tv_wed"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="WED"
                        android:textColor="@color/mainWhite"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:background="@color/mainColor"/>

                <TextView
                        android:id="@+id/tv_thu"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="THU"
                        android:textColor="@color/mainWhite"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:background="@color/mainColor"/>

                <TextView
                        android:id="@+id/tv_fri"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="FRI"
                        android:textColor="@color/mainWhite"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:background="@color/mainColor"/>

                <TextView
                        android:id="@+id/tv_sat"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="SAT"
                        android:textColor="@color/mainWhite"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:background="@color/mainColor"/>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>
    </android.support.constraint.ConstraintLayout>
