<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SigninActivity">

    <TextView
            android:id="@+id/tvIntro"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="환영합니다 \n 아이디어를 만들어주세요."
            android:background="@drawable/round_maincolor"
            android:textColor="@color/mainWhite"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    <TextView
            android:id="@+id/tvId"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="아이디"
            android:textSize="10sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/tvIntro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvIntro"
            android:background="@drawable/round_maincolor"
            android:textColor="@color/mainWhite"
            app:layout_constraintVertical_bias="0.289"/>
    <EditText
            android:id="@+id/etUserId"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@+id/tvId"
            app:layout_constraintEnd_toStartOf="@+id/btnCheckId"
            android:background="@drawable/round_grey"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/tvId"
            app:layout_constraintBottom_toBottomOf="@+id/tvId"/>
    <Button
            android:id="@+id/btnCheckId"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="중복확인"
            android:textSize="10sp"
            android:textColor="@color/mainWhite"
            android:background="@drawable/round_maincolor"
            app:layout_constraintEnd_toEndOf="@+id/tvIntro"
            app:layout_constraintTop_toTopOf="@+id/tvId"
            app:layout_constraintBottom_toBottomOf="@+id/tvId"/>



    <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시작하기"
            android:textSize="10sp"
            android:background="@drawable/round_greyfill"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="10dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
    />




</android.support.constraint.ConstraintLayout>